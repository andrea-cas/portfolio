---
import { ViewTransitions } from "astro:transitions";

import { Toaster } from "@/components/ui/sonner"
import Header from '@/components/Header.astro';
import '@/styles/globals.css';

const { title } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <meta name="description" content="As an industrial engineer transitioning into data analysis, I bring a unique blend of analytical skills and problem-solving expertise to the table.">
        <ViewTransitions />
    </head>
    <body class="flex flex-col h-full min-h-screen">
        <Header />
        <Toaster client:load />
        <main class="pt-12 mx-auto flex-grow">
            <slot />
        </main>
        <footer
            class="w-screen p-4 rounded-t-lg rounded-r-lg shadow md:p-6 dark:bg-gray-800 mt-20"
        >
            <div class="md:flex md:items-center md:justify-between">
                <span
                    class="text-sm text-gray-500 sm:text-center dark:text-gray-400"
                    >Created with <a
                        href="https://astro.build/"
                        class="hover:underline">Astro</a
                    > and <a
                        href="https://contentful.com/"
                        class="hover:underline">Contentful</a
                    >
                </span>
                <ul
                    class="flex flex-wrap items-center mt-3 text-sm text-gray-500 dark:text-gray-400 sm:mt-0"
                >
                    <li>
                        <a
                            target="_blank"
                            href="https://linkedin.com/in/andrea-cas"
                            class="mr-4 hover:underline md:mr-6">LinkedIn</a
                        >
                    </li>
                    <li>
                        <a
                            target="_blank"
                            href="https://github.com/andrea-cas"
                            class="mr-4 hover:underline md:mr-6">GitHub</a
                        >
                    </li>
                </ul>
            </div>
            <p class="text-sm">
                Andrea Castro Â© {new Date().getFullYear()}
            </p>
        </footer>
    </body>
</html>
